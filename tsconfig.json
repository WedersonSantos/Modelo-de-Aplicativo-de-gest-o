{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-native",
    "moduleResolution": "bundler", // <--- ALTERE PARA BUNDLER
    "allowImportingTsExtensions": true, // NecessÃ¡rio quando usa bundler
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": [
      "node",
      "nativewind/types"
    ],
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}